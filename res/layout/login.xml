<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/relativeLayout1"
    android:background="@drawable/bg" >

    <ImageView
        android:id="@+id/ib_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ib_in"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:src="@drawable/bangzhu" />

    <ImageView
        android:id="@+id/ib_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ib_help"
        android:src="@drawable/paihang" />

    <ImageView
        android:id="@+id/ib_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tuichu"
        android:layout_marginBottom="35dp" />

    <ImageView
        android:id="@+id/ib_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ib_in"
        android:layout_alignLeft="@+id/ib_exit"
        android:src="@drawable/shezhi" />

    <ImageView
        android:id="@+id/ib_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ib_exit"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="25dp"
        android:src="@drawable/jinru" />
</RelativeLayout>

</RelativeLayout>